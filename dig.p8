-- blast
function add_blast(x, y, vx, vy, duration, sprite, sprite_count)
 b = {}
 b.x = x
 b.y = y
 b.vx = vx
 b.vy = vy
 b.duration = duration
 b.tick = 0
 b.sprite = sprite
 b.sprite_count = sprite_count
 
 add(blasts, b)
end

function blast_sprite(b)
 return b.sprite + b.tick/b.duration*b.sprite_count
end
