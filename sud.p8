function exp_init()
 ee = {}
end

function add_exp(x,y,base,steps,vx,vy)
 e = {}
 e.x = x
 e.y = y
 e.vx = vx
 e.vy = vy
 e.base = base
 e.step = 0
 e.steps = steps
 add(ee,e)
end

function step_explosions()
 for e in all(ee) do
  e.step += 0.5
  e.x += e.vx
  e.y += e.vy
  if (e.step > e.steps) then
   del(ee,e)
  end
  
 end
end

