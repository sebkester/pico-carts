function sub_init()

 p={}
 p.x=80
 p.y=80
 p.v=1	
 p.w=2
 p.h=1
 p.sprite=35
 p.flip=false
 p.bad=false
 p.load_delay = 0
 p.health=5
 p.alive=true
 p.score=0
 
end

function	move()



	if(btn(0)) then
		p.x-=p.v
		p.flip = true
	end
	if(btn(1)) then
		p.x+=p.v
		p.flip = false
	end
	if(btn(2))p.y-=p.v
	if(btn(3))p.y+=p.v
	
	p.load_delay -= 1
	if (p.load_delay < 0) then
		if (btnp(4)) then
		 add_shot(p.x+3, p.y,0,-2,1,61,false,false)
			p.load_delay = 20
			sfx(7)
	 end	
	 if (btnp(5) and p.load_delay < 0) then
		 v = 2
		 x = 0
		 
		 if (p.flip) then
		 	v = -v
		 end
		 add_shot(p.x+x, p.y,v,0,2,3,p.flip,false)
			p.load_delay = 20
			sfx(6)
		end
		
	end
	
 if (p.y > 128-7) p.y=128-7
 if (p.y < 61) p.y=61
 if (p.x > 128-16) p.x=128-16
 if (p.x < 0) p.x = 0
	
end	
	
function damage()
 if not p.alive then
  return
 end
 
 sfx(10)
 explode(p)
 p.health -= 1
 if (p.health <= 0) then
  add_dead(p, 128)
  p.alive = false
	end
end
