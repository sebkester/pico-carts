end

function _update()

 if started and p.alive then
 	move()
 else
  if btnp(4) or btnp(5) then
   restart()
  end
	end
	move_shots()
	move_baddies()
	move_dead()

 if (rnd(100) < 4) then
  --add_baddie(100,70,-1,0,5,true)
  new_baddie()
 end
 
 step_explosions()
 if started then 
	 check_hits()
 end
end
     
