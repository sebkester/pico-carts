function shot_init()

 ss = {}
 
end

function add_shot(x,y,vx,vy,w,sprite,flip,bad)

 s = {}
	s.x = x
	s.y = y
	s.w = w
	s.h = 1
	s.vx = vx
	s.vy = vy
	s.sprite = sprite
	s.flip = flip
	s.bad = bad

 add(ss,s)

end

function move_shots()
 for s in all(ss) do
  s.x += s.vx
  s.y += s.vy
  
  if (s.y > 128) del(ss,s)
  if (s.y < -16) del(ss,s)
  if (s.x < -16) del(ss,s)
  if (s.x > 128) del(ss,s)
 end
end
